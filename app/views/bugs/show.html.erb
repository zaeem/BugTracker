
<h1>Bug Details</h2>
<table class="table table-striped">
	<tr>
		<td><label>Title</label></td>
		<td><label> <%= @bug.title %></label></td>
	</tr>
	<tr>
		<td><label>Description</label></td>
		<td><label> <%= @bug.description %></label></td>
	</tr>
	<tr>
		<td><label>Type</label></td>
		<td><label> <%= @bug._type %></label></td>
	</tr>
	<tr>
		<td><label>Status</label></td>
		<td><label> <%= @bug.status %></label></td>
	</tr>
	<tr>
		<td><label>Deadline</label></td>
		<td><label> <%= @bug.deadline.to_s %></label></td>
	</tr>
	<tr>
		<td><label>Screenshot</label></td>
		<td><label> <%= image_tag @bug.image_url.to_s %></label></td>
	</tr>
</table>